@model UniEat.Models.DishesDbModel

@{
    ViewData["Title"] = "Create Dishes";
}


<form asp-controller="UniEatAdmin" asp-action="addDishToDB">
    <div class="card">
        <div class="card-header">
           <h1 class="accordion-body">Hier werden gerichte in die Datenbank eingetragen</h1>
        </div>
        <div class="card-body">
            <input hidden asp-for="Id" />
            
            <div class="row">
                <input class="form-controll" asp-for="NameOfDish" type="text" placeholder="Gib den Namen des Gerichtes ein!" />
           <hr />
            
            </div>
                <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                <input type="checkbox" asp-for="Beef" class="btn-check" id="btncheck1" autocomplete="off">
                <label class="btn btn-outline-primary" for="btncheck1">Beef</label>

                <input type="checkbox" asp-for="Pork" class="btn-check" id="btncheck2" autocomplete="off">
                <label class="btn btn-outline-primary" for="btncheck2">Pork</label>

                <input type="checkbox" asp-for="Chicken" class="btn-check" id="btncheck3" autocomplete="off">
                <label class="btn btn-outline-primary" for="btncheck3">Geflügel</label>

                <input type="checkbox" asp-for="Fish" class="btn-check" id="btncheck4" autocomplete="off">
                <label class="btn btn-outline-primary" for="btncheck4">Fish</label>

                <input type="checkbox" asp-for="Veggie" class="btn-check" id="btncheck5" autocomplete="off">
                <label class="btn btn-outline-primary" for="btncheck5">Veggie</label>
             </div>



        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            
            <button class="btn btn-danger" asp-controller="UniEatAdmin" asp-action="Index">Zurück</button>
        </div>

            


    </div>
</form>

